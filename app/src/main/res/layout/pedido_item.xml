<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/pedidoTabela"
android:stretchColumns="1">
    <TableRow >
        <TextView
            android:text="@string/pedido.produto"
            android:gravity="left"
            android:width="@dimen/width_300dp"
            android:padding="4dip"
            />
        <TextView
            android:text="@string/pedido.quantidade"
            android:gravity="right"
            android:layout_marginRight="@dimen/layout_margin_10dp"
            android:padding="4dip" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/pedidoTabela_descricaoProduto"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pedidoTabela_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_margin_10dp"
            android:gravity="center"
            />
    </TableRow>
</TableLayout>
